Space Complexity O(1)


class Solution:
    def mySqrt(self, x: int) -> int:
        # Solution 1
        # from math import e, log
        # if x < 2:
        #     return x
        
        # left = int(e ** (0.5 * log(x)))
        # right = left + 1
        # return left if right * right> x else right

        # Solution 2
        if x<2: return x

        print("x//2", x//2)
        left, right = 2, x//2
        print("left", left)
        print("right", right)

        while left<=right:
            pivot = left + (right - left) // 2
            num = pivot * pivot
            if num > x:
                right = pivot-1
            elif num < x:
                left = pivot + 1
            else:
                return pivot
        return right
